user = { userid:	userid,
       	 name:		name,
         lastname: 	lastname,
	 email:		email,
	 password:	password,
	 friends:	{ 1: friend1id,
	 		  2: friend2id }

         invitations:   { 1: eventid,
	 		  2: eventid,
			  3: eventid,
			  4: eventid }

	 events: 	{ 1: eventid,
	 		  2: eventid,
			  3: eventid }
       }


event = { eventid:    	eventid,
          hostid:	hostid,
	  name:		name,
	  category:	category,
	  location:	location,
	  starttime:	starttime,
	  endtime:	endtime,
	  description:	description,
	  guests:	{ 1: guest,
	  		  2: guest }
        }


guest = { guestid: guestid,
      	  response: yes_or_no }


#-----------------------------------------------

method get_users:
       takes: None
       returns: users

method get_user:
       takes:	userid
       returns: user

method create_user:
       takes:	name, lastname, email, password
       returns:	user

method update_user:
       takes:	userid, name, lastname, email, password
       returns: user

method get_friends:
       takes: userid
       returns: friends

method add_friend:
       takes:	userid, friendid
       returns: true or false

method get_events:
       takes:   None
       returns: events

method create_event:
       takes:   hostid, name, category, location, starttime, endtime, description
       returns: event

method update_event:
       takes(some of):	eventid, name, category, location, starttime, endtime, description
       returns: event

method add_guest:
       takes:   eventid, guestid
       returns: true or false

method remove_guest:
       takes:   eventid, guestid
       returns: true or false

method get_event:
       takes:	eventid
       returns: event

method update_response:
       takes:   eventid, response
       returns: true or false